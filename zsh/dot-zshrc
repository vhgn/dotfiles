autoload -Uz promptinit compinit colors
promptinit
colors

# Do compinit once a day
for dump in ~/.zcompdump(N.mh+24); do
  compinit
done
compinit -C

zstyle ':completion:*' matcher-list 'm:{a-zA-Z}={A-Za-z}' 'r:|=*' 'l:|=* r:|=*'

autoload -Uz vcs_info
zstyle ':vcs_info:*' enable git svn
# This line obtains information from the vcs.
zstyle ':vcs_info:git*' formats "[%b] "
precmd() {
    vcs_info
}

setopt prompt_subst
prompt='%2/ %{$fg[green]%}${vcs_info_msg_0_}%{$fg[blue]%}~>%{$reset_color%} '

# Enable Vi mode
set -o vi


# Aliases
alias ls="ls --color=auto"
alias vim="nvim"
alias vi="nvim"

alias icat="kitty +kitten icat"

alias pjq="pbpaste | jq"

function load_nvm() {
  export NVM_DIR=~/.nvm
  [[ -s "$NVM_DIR/nvm.sh" ]] && source "$NVM_DIR/nvm.sh"
}


export DYLD_LIBRARY_PATH="$HOMEBREW_PREFIX/lib:$DYLD_LIBRARY_PATH"

# BEGIN opam configuration
# This is useful if you're using opam as it adds:
#   - the correct directories to the PATH
#   - auto-completion for the opam binary
# This section can be safely removed at any time if needed.
[[ ! -r '/Users/vahagn/.opam/opam-init/init.zsh' ]] || source '/Users/vahagn/.opam/opam-init/init.zsh' > /dev/null 2> /dev/null
# END opam configuration

